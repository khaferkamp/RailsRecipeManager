<%= render 'shared/page_title', pageTitle: "All Chefs" %>

<div class="col-m4 col-md-offset-4 center">
  <%= will_paginate(@chefs) %>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 centr">
      <section class="chef_info center">
        <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
        <p><h5>Chef name: <%= chef.chefname %></h5></p>
      </section>
    </div>
  </div>
  <hr/>
<% end %>

<div class="col-m4 col-md-offset-4 center">
  <%= will_paginate(@chefs) %>
</div>
